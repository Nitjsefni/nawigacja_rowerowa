<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nazwa"
        android:id="@+id/txtV_GP_Name"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="65.093"
        android:id="@+id/txtV_GP_Lat"
        android:layout_below="@+id/txtV_GP_Name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="20.212"
        android:id="@+id/txtV_GP_Lng"
        android:layout_alignTop="@+id/txtV_GP_Lat"
        android:layout_toRightOf="@+id/txtV_GP_Lat"
        android:layout_toEndOf="@+id/txtV_GP_Lat"
        android:layout_marginLeft="10dp" />

</RelativeLayout>